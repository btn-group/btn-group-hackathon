!!!
%html.h-100
  %head
    %title Escrow Demo | btn.group
    %meta{ charset: 'utf-8' }
    %link{ href: 'https://res.cloudinary.com/hv5cxagki/image/upload/c_scale,dpr_2,f_auto,h_15,q_auto/v1/logos/btn_purple_background_uu2ere', rel: 'shortcut icon' }
    %meta{ name: 'description', content: 'Escrow demo on Aleph Zero by btn.group' }
    %meta{ name: 'viewport', content: 'width=device-width, initial-scale=1, shrink-to-fit=no' }
    %meta{ property: 'og:image', content: 'https://res.cloudinary.com/hv5cxagki/image/upload/c_scale,h_80/v1621228725/logos/btn_purple_background_uu2ere.png' }
    %meta{ property: 'og:site_name', content: 'Escrow Demo | btn.group' }
    = csrf_meta_tags
    = csp_meta_tag

    -# === THEME STYLESHEETS ===
    = stylesheet_link_tag 'application'
    :javascript
      global = globalThis
    = javascript_include_tag 'application', defer: true
  %body.h-100.d-flex.flex-column.polkadotjs
    %header.d-flex.container-fluid.align-items-stretch.justify-content-between.py-3
      .d-flex.align-items-center
        .fs-5.text-white Escrow Demo
      .d-flex.align-items-stretch.justify-content-between
        .block
          .ms-1.ms-lg-3.d-none#wallet-toggle
            .d-flex.cursor-pointer
              %img.user-address-alias-avatar.h-100.symbol{ alt: 'avatar', src: 'https://res.cloudinary.com/hv5cxagki/image/upload/v1636593640/branding/btn_purple_background_dh2guy.png' }
              .ms-3
                .account-name.fw-bolder.fs-5
                .account-address-abbreviated.fw-semibold.text-muted.fs-6
          .ms-1.ms-lg-3
            = render 'polkadot_connect_button'
    = yield
    %footer.footer.mt-auto
      .container-fluid.py-3
        %span.text-muted.fw-semibold.me-1 2023
        %a{ href: 'https://btn.group', target: '_blank' } btn.group

